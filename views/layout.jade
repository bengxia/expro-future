    script(type='text/javascript', src='/libs/bootstrap/js/bootstrap.js')
    script(type='text/javascript', src='/javascripts/main.js')

    - if (locals.topic) { 
    title  #{locals.topic} - #{config.name}
    - } else { 
    title= config.description 
    - }
  body
    //
       navbar 
    .navbar
      .navbar-inner
        .container
          a.brand(href='/')
            img(src=config.site_logo, title=config.name)
          ul.nav.pull-right
            li
              a(href='/') 首页
            - var site_navs = config.site_navs || [];
            - for (var i = 0, l = site_navs.length; i < l; i++) {
                - var nav = site_navs[i];
            li
              a(href='/stores/index') 商户管理
            li
              a(href='') 平台管理
            li
              a(href=nav[0], target=nav[2]) #{nav[1]}
            - }
            li.divider-vertical
            - if (locals.current_user) { 
             li
              a(href='/signup') 设置
            li
              a(href='/signout') 退出           
            - } else { 
            li
              a(href='/signin') 登录
            - }
    //
       wrapper
    #wrapper
        #main
            != body
    //
       footer 
    #footer
      #footer_main
        .fr
        div
          strong
            a.dark(href='/about') 关于
          | |
