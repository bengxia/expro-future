!!! transitional
html(xmlns='http://www.w3.org/1999/xhtml')
  head
    //
       meta 
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(name='description', content='#{config.description}')
    - var headers = config.site_headers || [];
    - for (var i = 0, l = headers.length; i < l; i++) {
    !{headers[i]}
    - }
    meta(property='wb:webmaster', content='617be6bd946c6b96')
    link(title='RSS', type='application/rss+xml', rel='alternate', href='/rss')
    //
       style 
    link(rel='stylesheet', type='text/css', href='/libs/bootstrap/css/bootstrap.css', media='screen')
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css', media='screen')
    //
       script 
    script(type='text/javascript', src='/libs/jquery/jquery.js')
    script(type='text/javascript', src='/libs/bootstrap/js/bootstrap.js')
    script(type='text/javascript', src='/javascripts/main.js')
    - if (locals.topic) { 
    title  #{locals.topic} - #{config.name}
    - } else { 
    title= config.description 
    - }
  body
    //
       navbar 
    .navbar
      .navbar-inner
        .container
          a.brand(href='/')
            img(src=config.site_logo, title=config.name)
          ul.nav.pull-right
            li
              a(href='/') 首页
            - var site_navs = config.site_navs || [];
            - for (var i = 0, l = site_navs.length; i < l; i++) {
                - var nav = site_navs[i];
            li
              a(href='/stores') 商户管理
            li
              a(href='/merchants') 平台管理
            li
              a(href=nav[0], target=nav[2]) #{nav[1]}
            - }
            li.divider-vertical
            - if (locals.current_user) { 
             li
              a(href='/signup') 设置
            li
              a(href='/signin') 退出           
            - } else { 
            li
              a(href='/signin') 登录
            - }
    //
       wrapper 
    #wrapper
        #main
            != body
    #backtotop 回到顶部
    a(href='https://github.com/extensivepro/expro-future')
      img(style='position: absolute; top: 0; right: 0; border: 0;', src='https://a248.e.akamai.net/assets.github.com/img/71eeaab9d563c2b3c590319b398dd35683265e85/687474703a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f677261795f3664366436642e706e67', alt='Fork me on GitHub')
    //
       footer 
    #footer
      #footer_main
        .fr
        div
          strong
            a.dark(href='/about') 关于
          | |
          strong
            a.dark(href='/faq') FAQ
          | |
          strong
            a.dark(href='https://github.com/extensivepro/expro-future', target='_blank') Github
        .sep10
        .col_fade
          | © 2012
          br
          | 本平台为开源系统，版本: #{config.version} ，欢迎贡献代码
          br
          | 由
          a(href='http://ace.aliyun.com/', target='_blank')  ACE 
          | 为 #{config.name} 提供动力
    script(type='text/javascript')
      (function() {
      var c = document.createElement('script'); c.type = 'text/javascript'; c.async = true;
      c.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'www.clicki.cn/boot/44998';
      var h = document.getElementsByTagName('head')[0]; h.appendChild(c);
      })();
