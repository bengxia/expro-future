//以下是本页面引入的js文件
script(type='text/javascript', src='/javascripts/views/staff/staff.js')

.form-container
    form#add_form(action='', method='post')
        p.legend
            strong 注意:带
                em *
                |号的为必填字段！
                em 若是新建用户，默认密码为：123456
        fieldset
            legend
            div
                input#_csrf(type='hidden', name='_csrf', value='#{csrf}')
                input#_id(type='hidden', name='_id', value='#{locals._id?_id:''}')
                input#user_id(type='hidden', name='user_id')
                input#pageState(type='hidden', name='pageState', value='#{pageState}')
                input#save.btn(type='button', value=' 保 存 ')
                input#update.btn(type='button', value=' 更 新 ')
                input#close.btn(type='button', value=' 关 闭 ', onclick='$("#popDialog").dialog("close");')
        fieldset#cellphoneContent
            legend 员工手机号码
            div
                label  手机号码：
                input#cellphoneFirst.allowInput(type='text', name='cellphoneFirst')
            div
                label  请点击‘下一步’：
                input#cellphoneNextBt.btn(type='button', value=' 下一步 ')
        //设置密码输入隐藏层
        fieldset#passwordContent
            legend(style='color: #C00; font-style: normal;') 会员详细信息
            div
                label#passwordlabel.error  请输入登陆密码验证：
                input#passwordCK.allowInput(type='password', name='passwordCK', maxlength='30', value='')
            div
                label  显示“会员详细信息”请：
                input#checkPasswordBt.btn(type='button', value=' 验证 ')
        fieldset#userContent
            legend(style='color: #C00; font-style: normal;') 会员信息
            div#cellphone_div
                label.error  手机号码：
                input#cellphone.allowInput(type='text', name='cellphone', readonly)
            div
                label  性别：
                select#sex.allowUserInput(name='sex')
                    optgroup(label="请选择一项")
                        - var sexStates = [{id:1,value:'男性'},{id:0,value:'女性'}];
                        - for (var i in sexStates)
                          - var str = "<option value='"+sexStates[i].id+"' >"+sexStates[i].value + " </option>"
                          | !{str}
            div
                label  生日：
                input#birthday.allowUserInput(type='text', name='birthday', readonly)
        fieldset#memberContent
            legend(style='color: #C00; font-style: normal;') 员工信息
            div
                label.error  姓名/昵称：
                input#pet_name.allowInput(type='text', name='pet_name')
            div
                label.error  角色：
                select#role_id.allowInput(name='role_id')
                    optgroup(label="请选择一项")
            div
                label.error  门店：
                select#store_id.allowInput(name='store_id')
                    optgroup(label="请选择一项")
            div
                label.error  状态：
                select#state.allowInput(name='state')
                    optgroup(label="请选择一项")
                        - var states = [{id:1,value:'启用'},{id:0,value:'禁用'},{id:2,value:'脱离'}];
                        - for (var i in states)
                            - var str = "<option value='"+states[i].id+"' >"+states[i].value + " </option>"
                            | !{str}
            div
                label  隐私权限：
                select#privacy.allowInput(name='privacy')
                    optgroup(label="请选择一项")
                        - var states = [{id:8,value:'完全开放'}, {id:1,value:'基本信息开放'}, {id:0,value:'不开放'}];
                        - for (var i in states)
                            - var str = "<option value='"+states[i].id+"' >"+states[i].value + " </option>"
                            | !{str}
            div
                label  积分：
                input#point.allowInput(type='text', name='point')
            div
                label  储值：
                input#savings.allowInput(type='text', name='savings')
            div
                label  创建时间：
                input#create_time.allowInput(type='text', name='create_time', readonly)
            div
                label.error  到期时间：
                input#due_time.allowInput(type='text', name='due_time', readonly)
            div
                label  备注：
                textarea#comment.allowInput(rows='5', cols='30', name='comment')
