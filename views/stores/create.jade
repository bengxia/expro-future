.fanbox
  lable#msg
  h1 新增商户门店:
  form#add_form(action='/stores/create', method='post')
    table.post_table(width='100%', cellpadding='0', cellspacing='0')
      tr
          td(height='60')
          td
            input(type='hidden', name='_csrf', value='#{csrf}')
            input.btn(type='submit', value=' 保 存 ')
            input.btn(type='button', value=' 取 消 ', onclick='$.fancybox.close();')
      tr
        td(width='30%', align='right') 资产编号：
        td
          input.input2(type='text', name='inventar_num', maxlength='30')
      tr
        td(width='30%', align='right') 门店名称：
        td
          input.input2(type='text', name='name', maxlength='30', value='#{locals.store?store.name:''}')
      tr
        td(align='right') 所属商户：
        td
          select(name='merchant_id')
            each merchant in merchants
                option(value='#{merchant._id}') #{merchant.short_name}
      tr
        td(align='right') 状态：
        td
          select(name='state')
              option(value='0') 封闭
              option(value='1') 正常
              option(value='2') 公开
              option(value='3') 不公开
      tr
        td(width='30%', align='right') 地区编号：
        td
          input.input2(type='text', name='district_code', maxlength='30')
script(type='text/javascript')
  $(function(){
      $('#add_form').ajaxForm({
          beforeSubmit: validate,
          success: function(msg){
              if(msg.status=='success'){
                  $.fancybox.close();
                  $().message("成功添加");
                  $("#list").trigger("reloadGrid");
              }else{
                //alert("returnMsg is not 1:"+msg);
                $().message("添加失败:"+msg.status);
              }
          }
      });
  });
  function validate(formData, jqForm, options) {
