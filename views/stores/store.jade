//以下是本页面引入的js文件script(type='text/javascript', src='/javascripts/views/store/store.js').form-container    form#add_form(action='', method='post')        p.legend            strong 注意:                em 红色                |为必填字段！        fieldset            legend            div                input(type='hidden', name='_csrf', value='#{csrf}')                input#store_id(type='hidden', name='store_id',value='#{locals._id?_id:''}')                input#pageState(type='hidden', name='pageState', value='#{pageState}')                input#save.btn(type='button', value=' 保 存 ')                input#update.btn(type='button', value=' 更 新 ')                input#close.btn(type='button', value=' 关 闭 ', onclick='$("#popDialog").dialog("close");')        fieldset#storesContent            legend(style='color: #C00; font-style: normal;') 门店信息            div                label.error   门店名称：                input#store_name.allowInput(type='text', name='store_name')            div                label.error   资产编号：                input#inventar_num.allowInput(type='text', name='inventar_num')            div                label   门店仓库：                input#warehouse_name.allowInput(type='text', name='warehouse_name', disabled)            div                label.error  状态：                select#state.allowInput(name='state')                    - var states = [{id:1,value:'正常'},{id:0,value:'封闭'},{id:2,value:'公开'},{id:3,value:'不公开'}];                    - for (var i in states)                        - var str = "<option value='"+states[i].id+"' >"+states[i].value + " </option>"                        |!{str}            div                label.error   地区编号：                input#district_code.allowInput(type='text', name='district_code')            div                label   详细地址：                input#address.allowInput(type='text', name='address')            div                label   公交说明：                input#transit_info.allowInput(type='text', name='transit_info')            div                label   地图坐标：                input#map_info.allowInput(type='text', name='map_info')            div                label   门店公告：                input#notice.allowInput(type='text', name='notice')            div#create_time_div                label   创建时间：                input#create_time.allowInput(type='text', name='create_time', readonly)            div                label  备注：                textarea#comment.allowInput(rows='5', cols='40', name='comment')